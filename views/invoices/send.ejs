<% layout('layout') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-12">
    <form method="post" action="/invoices/send" class="form-horizontal">
      <h3>Send Invoice Form</h3>

      <div class="form-group form-group-sm">
        <label class="col-sm-3 control-label">Invoice ID</label>
        <div class="col-sm-9">
          <input type="text" name="id" value="" class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <button type="submit" class="btn btn-info">Send</button>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <% if (data.error) { %>
    <label>API call Failed</label>
    <pre class="bg-danger"><code><%= data.errorStr %></code></pre>
    <% } %>

    <% if (data.result) { %>
    <label>API call succeeded</label>
    <pre class="bg-success"><code><%= data.resultStr %></code></pre>
    <% } %>
  </div>
</div>

