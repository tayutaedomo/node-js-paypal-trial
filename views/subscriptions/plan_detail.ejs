<% layout('layout') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-12">
    <form method="get" action="/subscriptions/plan/detail" class="form-inline">
      <div class="form-group form-group-sm">
        <label>Plan ID</label>
        <input type="text" name="id" class="form-control">
      </div>
      <div class="form-group form-group-sm">
        <button type="submit" class="btn btn-info">Retrieve</button>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <% if (JSON.stringify(error) !== '{}') { %>
      <h2>API call failed</h2>
      <pre class="bg-danger"><code><%= errorStr %></code></pre>
    <% } %>

    <% if (JSON.stringify(billingPlan) !== '{}') { %>
      <h2>API call succeeded</h2>
      <pre class="bg-success"><code><%= billingPlanStr %></code></pre>
    <% } %>
  </div>
</div>

