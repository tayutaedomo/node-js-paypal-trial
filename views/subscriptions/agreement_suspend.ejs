<% layout('layout') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-12">
    <form method="post" action="/subscriptions/agreement_suspend" class="form-inline">
      <div class="form-group form-group-sm">
        <label>Agreement ID</label>
        <input type="text" name="id" class="form-control">
      </div>
      <div class="form-group form-group-sm">
        <button type="submit" class="btn btn-info">Suspend</button>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <% if (JSON.stringify(error) !== '{}') { %>
      <label>API call Failed</label>
      <pre class="bg-danger"><code><%= errorStr %></code></pre>
    <% } %>

    <% if (JSON.stringify(result) !== '{}') { %>
      <label>API call succeeded</label>
      <pre class="bg-success"><code><%= resultStr %></code></pre>
    <% } %>
  </div>
</div>

