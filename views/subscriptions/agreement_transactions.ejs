<% layout('layout') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-12">
    <form method="get" action="/subscriptions/agreement/transactions" class="form-horizontal">

      <div class="form-group form-group-sm">
        <label class="col-sm-3 control-label">Agreement ID</label>
        <div class="col-sm-9">
          <input type="text" name="id" value="<%= data.formInputs.agreementId %>" class="form-control">
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-3 control-label">Start Date</label>
        <div class="col-sm-9">
          <input type="text" name="startDate" value="<%= data.formInputs.startDate %>" class="form-control">
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-3 control-label">End Date</label>
        <div class="col-sm-9">
          <input type="text" name="endDate" value="<%= data.formInputs.endDate %>" class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <button type="submit" class="btn btn-info">Retrieve</button>
        </div>
      </div>

    </form>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <% if (JSON.stringify(error) !== '{}') { %>
      <label>API call failed</label>
      <pre class="bg-danger"><code><%= errorStr %></code></pre>
    <% } %>

    <% if (data.result) { %>
      <label>API call succeeded</label>
      <pre class="bg-success"><code><%= data.resultStr %></code></pre>
    <% } %>
  </div>
</div>

