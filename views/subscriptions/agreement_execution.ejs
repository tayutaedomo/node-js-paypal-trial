<% layout('layout') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-12">
    <form method="post" action="/subscriptions/agreement_execution" class="form-inline">
      <div class="form-group form-group-sm">
        <label>Token</label>
        <input type="text" name="token" value="" class="form-control">
      </div>
      <div class="form-group form-group-sm">
        <button type="submit" class="btn btn-info">Execute</button>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <% if (JSON.stringify(error) !== '{}') { %>
      <h2>API call Failed</h2>
      <pre class="bg-danger"><code><%= errorStr %></code></pre>
    <% } %>

    <% if (JSON.stringify(result) !== '{}') { %>
      <h2>API call succeeded</h2>
      <pre class="bg-success"><code><%= resultStr %></code></pre>
    <% } %>
  </div>
</div>

